<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="#000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/about_top" android:background="@color/carmode_common_bg" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <ImageView android:id="@+id/iv_app_icon_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/bnav_setting_icon_app_icon_code" android:contentDescription="@null"/>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="40dp">
            <TextView android:textSize="24sp" android:textStyle="bold" android:textColor="@color/carmode_titlebar_text_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/app_name_about"/>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/carmode_common_second_text" android:id="@+id/tv_app_version" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/app_version_about"/>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/carmode_common_second_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/app_rights_about"/>
            <TextView android:textSize="14sp" android:id="@+id/tv_cuid" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ls_divider" android:layout_width="match_parent" android:layout_height="wrap_content">
        <GridView android:gravity="center" android:id="@+id/ls_about_list" android:layout_width="match_parent" android:layout_height="wrap_content" android:listSelector="@drawable/carmode_list_bg_selector" android:cacheColorHint="@android:color/transparent" android:horizontalSpacing="0dp" android:verticalSpacing="0dp" android:stretchMode="columnWidth" android:numColumns="3" android:scrollbarFadeDuration="0"/>
    </LinearLayout>
</LinearLayout>
