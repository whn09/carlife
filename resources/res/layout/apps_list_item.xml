<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/iv_app_icon" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/douban_fm" android:layout_alignParentLeft="true"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_app_status" android:layout_width="400dp" android:layout_height="wrap_content" android:layout_toRightOf="@+id/iv_app_icon">
        <TextView android:textSize="16sp" android:textColor="@android:color/black" android:id="@+id/tv_app_status" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ProgressBar android:id="@+id/pb_app_download_progress" android:layout_width="300dp" android:layout_height="wrap_content" style="?android:attr/progressBarStyleHorizontal"/>
    </LinearLayout>
    <Button android:textSize="18sp" android:textColor="@android:color/black" android:id="@+id/btn_app_admin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/btn_app_download" android:layout_alignParentRight="true"/>
</RelativeLayout>
