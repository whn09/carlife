<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageButton android:id="@+id/ib_left" android:background="@drawable/com_bg_btn_selector" android:focusable="true" android:layout_width="@dimen/common_item_width" android:layout_height="@dimen/common_item_height_64" android:src="@drawable/com_ic_back" android:contentDescription="back"/>
    <ImageView android:id="@+id/iv_null_arrow" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="136dp" android:src="@drawable/com_ic_arrow_point" android:layout_below="@+id/ib_left" android:layout_alignParentRight="true"/>
    <com.baidu.carlife.view.CommonTipView android:id="@+id/common_tip_view" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/ib_left"/>
    <RelativeLayout android:id="@+id/rl_music_content" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_song_info" android:layout_width="300dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/common_item_width">
            <com.baidu.carlife.view.MarqueeTextView android:gravity="center_vertical" android:id="@+id/music_name" android:layout_width="match_parent" android:layout_height="@dimen/common_item_height_64" style="@style/MusicSongName"/>
            <com.baidu.carlife.view.MarqueeTextView android:id="@+id/music_singer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="-14dp" style="@style/MusicSongArtist"/>
            <com.baidu.carlife.view.MarqueeTextView android:id="@+id/music_album" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="4dp" style="@style/MusicSongArtist"/>
        </LinearLayout>
        <ImageButton android:id="@+id/ib_mode" android:background="@drawable/com_bg_btn_selector" android:focusable="true" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="70dp" android:layout_marginTop="72dp" android:src="@drawable/music_ic_cycle" android:contentDescription="mode"/>
        <ImageButton android:id="@+id/ib_more" android:background="@drawable/com_bg_btn_selector" android:focusable="true" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="16dp" android:layout_marginTop="72dp" android:src="@drawable/music_ic_flipchannel" android:layout_toRightOf="@+id/ib_mode" android:contentDescription="more"/>
        <RelativeLayout android:id="@+id/ll_play_control" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="64dp">
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="148dp" android:layout_marginLeft="56dp" android:layout_marginRight="56dp" android:layout_centerInParent="true">
                <ImageButton android:id="@+id/music_prev" android:background="@drawable/com_bg_btn_selector" android:focusable="true" android:layout_width="80dp" android:layout_height="80dp" android:layout_marginBottom="22dp" android:src="@drawable/music_ic_lastsong" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"/>
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">
                    <ImageButton android:id="@+id/music_play" android:background="@drawable/com_bg_music_play_btn_selector" android:focusable="true" android:layout_width="114dp" android:layout_height="114dp" android:src="@drawable/music_ic_play" android:layout_centerInParent="true" android:contentDescription="play"/>
                    <com.baidu.carlife.view.MusicCircleView android:layout_width="118dp" android:layout_height="118dp" android:layout_centerInParent="true"/>
                    <com.baidu.carlife.view.MusicCircleProgressView android:id="@+id/cp_progress" android:layout_width="124dp" android:layout_height="124dp" android:layout_centerInParent="true"/>
                </RelativeLayout>
                <ImageButton android:id="@+id/music_next" android:background="@drawable/com_bg_btn_selector" android:focusable="true" android:layout_width="80dp" android:layout_height="80dp" android:layout_marginBottom="22dp" android:src="@drawable/music_ic_nextsong" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
