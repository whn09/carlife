<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="18sp" android:textColor="@color/cl_text_c_dialog" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/download_carlife"/>
    <TextView android:textSize="18sp" android:textColor="@color/cl_text_c_dialog" android:id="@+id/has_finished" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:textSize="18sp" android:textColor="@color/cl_text_c_dialog" android:layout_gravity="center_horizontal" android:id="@+id/percent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp"/>
