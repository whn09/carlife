<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/carmode_common_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/mileage_head" android:background="@drawable/iv_launch" android:layout_width="match_parent" android:layout_height="120dp">
        <LinearLayout android:orientation="vertical" android:id="@+id/total_mileage" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="35dp" android:layout_marginRight="22.5dp" android:layout_weight="1">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="14sp" android:textColor="#ffffff" android:id="@+id/tv_total_mileage_des" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/totalMileage"/>
                <TextView android:textSize="20sp" android:textColor="#ffffffff" android:id="@+id/tv_total_mileage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="0公里" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
            </LinearLayout>
            <View android:layout_gravity="center_vertical" android:background="@color/carmode_common_divide_line" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <TextView android:textSize="14sp" android:textColor="#ffffffff" android:id="@+id/tv_total_mileage_rank_des" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="总排名"/>
                <TextView android:textSize="14sp" android:textColor="#ffffffff" android:id="@+id/tv_total_mileage_rank" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="500+"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/week_mileage" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="22.5dp" android:layout_marginRight="35dp" android:layout_weight="1">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="14sp" android:textColor="#ffffffff" android:id="@+id/tv_week_mileage_des" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/weeklyMileage"/>
                <TextView android:textSize="20sp" android:textColor="#ffffffff" android:id="@+id/tv_week_mileage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="0公里" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
            </LinearLayout>
            <View android:layout_gravity="center_vertical" android:background="@color/carmode_common_divide_line" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="10dp">
                <TextView android:textSize="14sp" android:textColor="#ffffffff" android:id="@+id/tv_week_mileage_rank_des" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="周排名"/>
                <TextView android:textSize="14sp" android:textColor="#ffffffff" android:id="@+id/tv_week_mileage_rank" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="500+"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:id="@+id/viewpager_title" android:layout_width="match_parent" android:layout_height="60dp">
            <TextView android:textSize="20sp" android:gravity="center" android:id="@+id/tv_total_rank_title" android:layout_width="match_parent" android:layout_height="match_parent" android:text="总排行" android:layout_weight="1"/>
            <TextView android:textSize="20sp" android:gravity="center" android:id="@+id/tv_week_rank_title" android:layout_width="match_parent" android:layout_height="match_parent" android:text="周排行" android:layout_weight="1"/>
        </LinearLayout>
        <android.support.v4.view.ViewPager android:layout_gravity="center" android:id="@+id/mileage_rank_pager" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
