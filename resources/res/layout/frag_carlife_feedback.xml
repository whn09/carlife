<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/carlife_common_title_bar_new"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="@color/cl_text_a2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="80dp" android:layout_marginBottom="12dp" android:text="@string/help_title"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/edittext_content_layout" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="72dp" android:layout_marginRight="72dp">
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="24dp">
                    <LinearLayout android:gravity="center_vertical" android:id="@+id/feedback_linear_function_exection" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                        <ImageView android:id="@+id/feedback_iv_function_exection" android:background="@drawable/com_ic_radiobuttion_selected" android:layout_width="19dp" android:layout_height="19dp"/>
                        <TextView android:textSize="20sp" android:textColor="@color/cl_text_a4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/carlife_feedback_function_excetion"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center_vertical" android:id="@+id/feedback_linear_function_suggest" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                        <ImageView android:id="@+id/feedback_iv_function_suggest" android:background="@drawable/com_ic_radiobuttion_unselected" android:layout_width="19dp" android:layout_height="19dp"/>
                        <TextView android:textSize="20sp" android:textColor="@color/cl_text_a4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/carlife_feedback_function_suggest"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center_vertical" android:id="@+id/feedback_linear_other_question" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                        <ImageView android:id="@+id/feedback_iv_other_question" android:background="@drawable/com_ic_radiobuttion_unselected" android:layout_width="19dp" android:layout_height="19dp"/>
                        <TextView android:textSize="20sp" android:textColor="@color/cl_text_a4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/carlife_feedback_other_question"/>
                    </LinearLayout>
                </LinearLayout>
                <View android:background="@color/cl_line_a3" android:layout_width="match_parent" android:layout_height="1dp"/>
                <EditText android:textSize="20sp" android:gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/edittext_content" android:background="@null" android:layout_width="match_parent" android:layout_height="90dp" android:layout_marginLeft="24dp" android:layout_marginTop="8dp" android:layout_marginRight="24dp" android:hint="@string/carlife_feedback_content_hint" android:imeOptions="actionUnspecified|actionGo|actionSend|actionDone|flagNoFullscreen|flagNoExtractUi" android:textCursorDrawable="@null"/>
                <RelativeLayout android:paddingTop="8dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="16sp" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/calife_edittext_content_num_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="22dp" android:text="@string/carlife_feedback_content_num_count" android:layout_alignParentRight="true"/>
                    <TextView android:textSize="16sp" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/calife_edittext_content_num_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_toLeftOf="@+id/calife_edittext_content_num_amount"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:id="@+id/pic_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="72dp" android:layout_marginTop="16dp" android:layout_marginRight="72dp">
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginTop="10dp" android:layout_marginRight="22dp">
                    <TextView android:textSize="18sp" android:textColor="@color/cl_text_a1" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/carlife_feedback_photo_question" android:layout_weight="1"/>
                    <TextView android:textSize="18sp" android:textColor="@color/cl_text_a1" android:id="@+id/feedback_image_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"/>
                    <TextView android:textSize="18sp" android:textColor="@color/cl_text_a1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="/3"/>
                </LinearLayout>
                <GridView android:id="@+id/gridView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="12dp" android:layout_marginBottom="16dp" android:listSelector="@android:color/transparent" android:stretchMode="none" android:columnWidth="76dp" android:numColumns="4"/>
            </LinearLayout>
            <TextView android:textSize="16sp" android:textColor="@color/cl_text_a2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="80dp" android:layout_marginTop="16dp" android:layout_marginBottom="12dp" android:text="@string/carlife_feedback_contact"/>
            <EditText android:textSize="20sp" android:gravity="center_vertical" android:id="@+id/edittext_email" android:paddingLeft="24dp" android:paddingRight="24dp" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="72dp" android:layout_marginRight="72dp" android:hint="@string/carlife_feedback_email_hint" android:singleLine="true" android:imeOptions="actionUnspecified|flagNoFullscreen|flagNoExtractUi" android:textCursorDrawable="@null"/>
            <TextView android:textSize="16sp" android:textColor="@color/cl_text_a1" android:gravity="right" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginRight="94dp" android:text="@string/carlife_feedback_contact_qq"/>
            <TextView android:textSize="16sp" android:textColor="@color/cl_text_a1" android:gravity="right" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginRight="94dp" android:text="@string/carlife_feedback_contact_email"/>
            <RelativeLayout android:layout_gravity="center_horizontal" android:id="@+id/feedback_commit" android:layout_width="248dp" android:layout_height="48dp" android:layout_marginTop="32dp" android:layout_marginBottom="32dp">
                <LinearLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
                    <ImageView android:id="@+id/feedback_commit_iv" android:background="@drawable/com_ic_loading" android:visibility="gone" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginRight="16dp"/>
                    <TextView android:textSize="20sp" android:textColor="@color/cl_text_a5_title" android:layout_gravity="center_horizontal" android:id="@+id/feedback_commit_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/feedback_commit"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
