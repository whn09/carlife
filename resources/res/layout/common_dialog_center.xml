<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="#b2000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="vertical" android:background="@drawable/com_dialog_bg" android:layout_width="288dp" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <TextView android:textSize="20sp" android:textColor="@color/cl_text_b_dialog" android:gravity="center" android:id="@+id/dialog_title" android:paddingLeft="24dp" android:paddingTop="16dp" android:paddingRight="24dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="-8dp"/>
        <ImageButton android:id="@+id/dialog_title_bnt_right" android:background="@drawable/common_btn_bg_focus" android:visibility="gone" android:layout_width="56dp" android:layout_height="56dp" android:src="@drawable/com_ic_dialog_close" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
        <RelativeLayout android:id="@+id/dialog_content" android:padding="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/dialog_title">
            <TextView android:textSize="18sp" android:textColor="@color/cl_text_c_dialog" android:gravity="center_horizontal" android:id="@+id/content_msg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <View android:id="@+id/temp" android:background="@color/cl_line_d_dialog" android:layout_width="match_parent" android:layout_height="@dimen/common_dialog_line" android:layout_below="@+id/dialog_content"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/bottom_bar" android:layout_width="match_parent" android:layout_height="@dimen/common_item_height" android:layout_below="@+id/temp">
            <TextView android:textSize="17sp" android:textColor="@color/cl_text_c_btn_dialog" android:gravity="center" android:id="@+id/first_btn" android:background="@drawable/com_bg_dialog_item_selector" android:focusable="true" android:visibility="visible" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/positive" android:layout_weight="1"/>
            <View android:id="@+id/temp1" android:background="@color/cl_line_d_dialog" android:visibility="gone" android:layout_width="@dimen/common_dialog_line" android:layout_height="match_parent"/>
            <TextView android:textSize="17sp" android:textColor="@color/cl_text_c_btn_dialog" android:gravity="center" android:id="@+id/second_btn" android:background="@drawable/com_bg_dialog_item_selector" android:focusable="true" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/negative" android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
