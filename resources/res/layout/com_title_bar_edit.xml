<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@drawable/bnav_common_edit_text_selector" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/iv_search_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_search_input" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    <ImageView android:id="@+id/iv_clear_input" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="9dp" android:src="@drawable/bnav_search_delete_input" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@string/app_name"/>
    <EditText android:textSize="14sp" android:textColorHint="#c7c7c7" android:id="@+id/et_search" android:background="@drawable/bnav_common_edit_text_selector" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/search_title_hint" android:singleLine="true" android:maxLength="20" android:layout_toLeftOf="@+id/iv_clear_input" android:layout_toRightOf="@+id/iv_search_icon" android:imeOptions="actionUnspecified|actionNone|actionGo|actionSearch|flagNoExtractUi"/>
</RelativeLayout>
