<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.baidu.carlife.view.HomeCardMusicMelodyView android:id="@+id/radio_player_melody_view" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="28dp" android:layout_alignParentBottom="true" android:alpha="0.5"/>
    <RelativeLayout android:id="@+id/rl_radio_top" android:layout_width="match_parent" android:layout_height="68dp">
        <ImageButton android:id="@+id/ib_left" android:background="@drawable/com_bg_btn_selector" android:focusable="true" android:layout_width="80dp" android:layout_height="64dp" android:src="@drawable/com_ic_back" android:contentDescription="back"/>
        <TextView android:textSize="18sp" android:textColor="#ccffffff" android:ellipsize="end" android:gravity="center" android:id="@+id/radio_channel_name" android:layout_width="256dp" android:layout_height="24dp" android:layout_marginTop="20dp" android:text="川普不设军事行动红线" android:maxLines="1" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="14sp" android:textColor="#ffffffff" android:ellipsize="end" android:gravity="center" android:id="@+id/radio_content_name" android:layout_width="256dp" android:layout_height="20dp" android:layout_marginTop="4dp" android:text="国际新闻" android:maxLines="1" android:layout_below="@+id/radio_channel_name" android:layout_centerHorizontal="true" android:alpha="0.6"/>
        <com.baidu.carlife.view.CommonTipView android:id="@+id/common_tip_view" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/ib_left"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_radio_control" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_weight="1" android:layout_below="@+id/rl_radio_top" android:layout_centerHorizontal="true">
        <ImageButton android:id="@+id/radio_favorite" android:background="@drawable/radio_player_bg_btn_padding_selector" android:focusable="true" android:layout_width="80dp" android:layout_height="80dp" android:src="@drawable/radio_ic_like_off"/>
        <ImageButton android:id="@+id/radio_prev" android:background="@drawable/radio_player_bg_btn_padding_selector" android:focusable="true" android:layout_width="80dp" android:layout_height="80dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:src="@drawable/radio_ic_prev"/>
        <RelativeLayout android:layout_width="168dp" android:layout_height="168dp">
            <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/frag_radio_player_img" android:layout_width="144dp" android:layout_height="144dp" android:layout_centerInParent="true" app:placeholderImage="@drawable/radio_play_default_cover" app:placeholderImageScaleType="0" app:actualImageScaleType="7" app:overlayImage="@color/cl_radio_player_overlay" app:roundAsCircle="true"/>
            <ImageButton android:id="@+id/radio_play" android:background="@drawable/radio_player_bg_btn_selector" android:focusable="true" android:layout_width="144dp" android:layout_height="144dp" android:src="@drawable/radio_ic_play" android:scaleType="center" android:layout_centerInParent="true" android:contentDescription="play"/>
            <com.baidu.carlife.view.MusicCircleView android:layout_width="168dp" android:layout_height="168dp" android:layout_centerInParent="true"/>
            <com.baidu.carlife.view.RadioPlayerCircleProgressView android:id="@+id/cp_progress" android:layout_width="168dp" android:layout_height="168dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <ImageButton android:id="@+id/radio_next" android:background="@drawable/radio_player_bg_btn_padding_selector" android:focusable="true" android:layout_width="80dp" android:layout_height="80dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:src="@drawable/radio_ic_next"/>
        <ImageButton android:id="@+id/radio_delete" android:background="@drawable/radio_player_bg_btn_padding_selector" android:focusable="true" android:layout_width="80dp" android:layout_height="80dp" android:src="@drawable/radio_ic_delete"/>
    </LinearLayout>
</RelativeLayout>
