<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/background_light" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/local_map_download_list_update_hint" android:background="#fffedb" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14dp" android:textColor="#6b5300" android:gravity="center_horizontal" android:layout_gravity="center_vertical" android:id="@+id/local_map_download_list_update_hint_text" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="地图有更新，没网也能搜，查看更新内容>>"/>
        <ImageButton android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/local_map_download_list_update_hint_close" android:background="@android:color/transparent" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/sapi_clear_btn_selector"/>
    </FrameLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <ListView android:id="@+id/local_map_download_list" android:background="@color/common_background" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="@null"/>
        <include layout="@layout/local_map_download_list_empty"/>
    </FrameLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/local_map_download_list_action_bar" android:visibility="visible" android:layout_width="match_parent" android:layout_height="40dp" android:baselineAligned="false">
        <RelativeLayout android:id="@+id/local_map_download_list_update_all" android:background="@drawable/local_map_action_bar_background_new" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:textSize="16dp" android:textColor="@color/local_map_action_bar_text_color_new" android:gravity="center_vertical" android:id="@+id/local_map_download_list_update_all_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="全部更新" android:drawableLeft="@drawable/localmap_update_new" android:drawablePadding="3dp" android:layout_centerInParent="true"/>
            <TextView android:textSize="8dp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/local_map_can_update_count" android:background="@drawable/local_map_can_update_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-8dp" android:layout_marginBottom="-8dp" android:includeFontPadding="false" android:layout_toRightOf="@+id/local_map_download_list_update_all_text" android:layout_above="@+id/local_map_download_list_update_all_text"/>
            <View android:background="@color/local_map_white_half" android:layout_width="0.5dp" android:layout_height="16dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <FrameLayout android:id="@+id/local_map_download_list_start_all" android:background="@drawable/local_map_action_bar_background_new" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:textSize="16dp" android:textColor="@color/local_map_action_bar_text_color_new" android:gravity="center_vertical" android:layout_gravity="center" android:id="@+id/local_map_download_list_start_all_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="全部下载" android:drawableLeft="@drawable/localmap_download_new" android:drawablePadding="3dp"/>
            <View android:layout_gravity="right|center_vertical|center_horizontal|center" android:background="@color/local_map_white_half" android:layout_width="0.5dp" android:layout_height="16dp"/>
        </FrameLayout>
        <FrameLayout android:id="@+id/local_map_download_list_pause_all" android:background="@drawable/local_map_action_bar_background_new" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:textSize="16dp" android:textColor="@color/local_map_action_bar_text_color_new" android:gravity="center_vertical" android:layout_gravity="center" android:id="@+id/local_map_download_list_pause_all_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="全部暂停" android:drawableLeft="@drawable/localmap_pause_new" android:drawablePadding="3dp"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
