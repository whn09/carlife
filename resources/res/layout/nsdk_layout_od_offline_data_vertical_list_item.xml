<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/download_list_item_layout" android:background="@android:color/background_dark" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/info_relativelayout" android:focusable="false" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="53dp">
        <ImageView android:id="@+id/imageview_btn_status" android:paddingTop="10dp" android:paddingRight="13dp" android:paddingBottom="10dp" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/offline_data_status_download" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <TextView android:id="@+id/textview_name" android:paddingLeft="13dp" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="北京市" android:layout_toRightOf="@+id/imageview_btn_taskStatus" android:layout_centerVertical="true" style="@style/NSDK_Text.provinceListName"/>
        <TextView android:id="@+id/textview_info" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="23.4m/218M 
未下载" android:singleLine="true" android:layout_toLeftOf="@+id/imageview_btn_status" android:layout_centerVertical="true" android:layout_alignWithParentIfMissing="true" style="@style/NSDK_Text.provinceListStatus"/>
        <ProgressBar android:id="@+id/progress_bar_downloading" android:layout_width="match_parent" android:layout_height="2dp" android:max="100" android:progressDrawable="@drawable/nsdk_drawable_od_bg_progress_downloading_selector" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" style="?android:attr/progressBarStyleHorizontal"/>
        <ProgressBar android:id="@+id/progress_bar_downloading_night" android:layout_width="match_parent" android:layout_height="2dp" android:max="100" android:progressDrawable="@drawable/nsdk_drawable_od_bg_progress_downloading_selector_night" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" style="?android:attr/progressBarStyleHorizontal"/>
        <ProgressBar android:id="@+id/progress_bar_suspend" android:layout_width="match_parent" android:layout_height="2dp" android:max="100" android:progressDrawable="@drawable/nsdk_drawable_od_bg_progress_suspend_selector" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" style="?android:attr/progressBarStyleHorizontal"/>
        <ProgressBar android:id="@+id/progress_bar_suspend_night" android:layout_width="match_parent" android:layout_height="2dp" android:max="100" android:progressDrawable="@drawable/nsdk_drawable_od_bg_progress_suspend_selector_night" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" style="?android:attr/progressBarStyleHorizontal"/>
        <com.baidu.navi.view.OfflineDataMergeLoadingView android:id="@+id/merge_view" android:layout_width="match_parent" android:layout_height="2dp" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <View android:id="@+id/list_item_divider" android:background="@drawable/bnav_common_line_horizontal" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="0dp" android:layout_marginRight="0dp"/>
    <View android:id="@+id/list_item_margin" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="10dp"/>
</LinearLayout>
