                <TextView android:textSize="@dimen/default_text_72" android:textColor="#ffffffff" android:id="@+id/weather_current_temp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-10dp" android:text="12°" android:fontFamily="sans-serif-thin"/>
