                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="@dimen/default_132" android:layout_marginLeft="@dimen/default_16">
                <ImageView android:id="@+id/weather_pic" android:layout_width="@dimen/default_72" android:layout_height="@dimen/default_72" android:layout_marginTop="4dp" android:src="@drawable/weather_cloudy"/>
                <TextView android:textSize="@dimen/default_text_14" android:textColor="#80ffffff" android:gravity="bottom" android:id="@+id/weather_weather" android:layout_width="@dimen/default_120" android:layout_height="match_parent" android:layout_marginLeft="@dimen/default_9" android:text="晴转多云" android:singleLine="true" android:layout_weight="1"/>
                <TextView android:textSize="@dimen/default_text_14" android:textColor="#80ffffff" android:gravity="center_vertical" android:id="@+id/weather_city" android:layout_width="@dimen/default_120" android:layout_height="@dimen/default_20" android:layout_marginLeft="@dimen/default_9" android:layout_marginTop="@dimen/default_4" android:text="深圳市" android:singleLine="true" android:drawableLeft="@drawable/duer_ic_weather_position"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:background="@color/two_percent_white" android:paddingBottom="@dimen/default_14" android:layout_width="@dimen/default_80" android:layout_height="match_parent">
            <TextView android:textSize="@dimen/default_text_14" android:textColor="#80ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_24" android:text="明天"/>
            <ImageView android:id="@+id/weather_pic_tomorrow" android:layout_width="@dimen/default_24" android:layout_height="@dimen/default_24" android:layout_marginTop="@dimen/default_28" android:src="@drawable/weather_sun_b"/>
            <TextView android:textSize="@dimen/default_text_14" android:textColor="#ffffffff" android:id="@+id/weather_temp_tomorrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_4" android:text="18～23°"/>
            <TextView android:textSize="@dimen/default_text_14" android:textColor="#80ffffff" android:gravity="center" android:id="@+id/weather_weather_tomorrow" android:layout_width="@dimen/default_61" android:layout_height="@dimen/default_40" android:layout_marginTop="@dimen/default_18" android:text="晴天" android:lineSpacingExtra="@dimen/default_2"/>
        </LinearLayout>
        <ImageView android:background="#801c2645" android:layout_width="2px" android:layout_height="match_parent"/>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:background="@color/two_percent_white" android:layout_width="@dimen/default_80" android:layout_height="match_parent">
            <TextView android:textSize="@dimen/default_text_14" android:textColor="#80ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_24" android:text="后天"/>
            <ImageView android:id="@+id/weather_pic_tdat" android:layout_width="@dimen/default_24" android:layout_height="@dimen/default_24" android:layout_marginTop="@dimen/default_28" android:src="@drawable/weather_wind_b"/>
