<?xml version="1.0" encoding="utf-8"?>
<com.baidu.che.codriver.widget.NLPWeatherView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:paddingTop="@dimen/default_21" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:background="@color/ninety_five_percent_white" android:layout_width="match_parent" android:layout_height="@dimen/default_192">
