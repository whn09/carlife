            <TextView android:textSize="@dimen/default_text_14" android:textColor="#80ffffff" android:gravity="center" android:id="@+id/weather_weather_tdat" android:layout_width="@dimen/default_61" android:layout_height="@dimen/default_40" android:layout_marginTop="@dimen/default_18" android:text="多云" android:lineSpacingExtra="@dimen/default_2"/>
        </LinearLayout>
    </LinearLayout>
</com.baidu.che.codriver.widget.NLPWeatherView>
