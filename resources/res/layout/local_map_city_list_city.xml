<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/local_map_city_list_city" android:paddingLeft="16dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/local_map_city_normal_relativeLayout" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="45dp">
        <TextView android:textSize="@dimen/Text_Size_Pixel_21" android:textColor="@android:color/black" android:id="@+id/local_map_city_list_city_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/Text_Size_Pixel_18" android:id="@+id/local_map_city_list_city_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/local_map_city_list_city_name" android:layout_alignBaseline="@+id/local_map_city_list_city_name" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/local_map_city_base_relativeLayout" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="45dp">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/Text_Size_Pixel_21" android:textColor="@android:color/black" android:id="@+id/local_map_city_base_city_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp" android:layout_alignParentLeft="true"/>
                <TextView android:textSize="@dimen/Text_Size_Pixel_18" android:id="@+id/local_map_city_base_city_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/local_map_city_base_city_name"/>
            </LinearLayout>
            <TextView android:textSize="10dp" android:textColor="#b8b8b8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:text="注意：基础必备包，不可删除！"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView android:textSize="12sp" android:textColor="#b8b8b8" android:id="@+id/local_map_city_list_city_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/local_map_city_list_city_download" android:layout_centerVertical="true"/>
    <ImageView android:id="@+id/local_map_city_list_city_download" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:src="@drawable/localmap_citylist_download_btn" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
</RelativeLayout>
