<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="@dimen/common_title_bar_height">
        <ImageButton android:id="@+id/fragment_wechat_back" android:background="@android:color/transparent" android:layout_width="@dimen/common_item_width" android:layout_height="match_parent" android:src="@mipmap/com_ic_back"/>
        <TextView android:textSize="18sp" android:textColor="@color/cl_text_a4" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="微信"/>
        <TextView android:textSize="12sp" android:textColor="@color/cl_text_a1_title" android:layout_gravity="center_vertical" android:id="@+id/fragment_wechat_title_desc" android:paddingTop="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="此服务由第三方提供"/>
        <View android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
        <FrameLayout android:id="@+id/fragment_wechat_layout_usericon" android:background="@drawable/com_bg_btn_selector" android:layout_width="@dimen/common_item_width" android:layout_height="match_parent">
            <com.facebook.drawee.view.SimpleDraweeView android:layout_gravity="center" android:id="@+id/fragment_wechat_img_usericon" android:layout_width="30dp" android:layout_height="30dp" android:scaleType="fitXY" app:placeholderImage="@mipmap/main_left_user" app:roundedCornerRadius="6dp"/>
        </FrameLayout>
    </LinearLayout>
    <GridView android:gravity="center_horizontal" android:id="@+id/fragment_wechat_gridview" android:scrollbars="none" android:fadingEdge="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="24dp" android:layout_marginTop="35dp" android:layout_marginRight="24dp" android:listSelector="@android:color/transparent" android:cacheColorHint="@android:color/transparent" android:stretchMode="columnWidth" android:numColumns="4"/>
</LinearLayout>
