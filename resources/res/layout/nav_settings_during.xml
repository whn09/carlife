                <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent">
                    <TextView android:textAppearance="@style/NavCommonListItemTitleText" android:id="@+id/nav_real_enlarge_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="显示路口放大图"/>
                    <TextView android:textAppearance="@style/NavCommonListItemTipsText" android:gravity="center_vertical" android:id="@+id/nav_real_enlarge_tips_tv" android:paddingLeft="15dp" android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="未下载离线导航包,会使用数据流量"/>
