                <ImageView android:id="@+id/nav_real_enlarge_cb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:src="@drawable/nav_checkout_icon" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@null"/>
            </RelativeLayout>
            <ImageView android:background="@drawable/nav_settings_divider_line" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_alignParentBottom="true" android:contentDescription="@null"/>
            <RelativeLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/nav_3d_dynamic_layout" android:background="@drawable/nav_settings_middle_selector" android:visibility="gone" android:layout_width="match_parent" android:layout_height="60dp">
                <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent">
                    <TextView android:textAppearance="@style/NavCommonListItemTitleText" android:id="@+id/nav_3d_dynamic_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="3D动态导航"/>
                    <TextView android:textAppearance="@style/NavCommonListItemTipsText" android:gravity="center_vertical" android:id="@+id/nav_3d_dynamic_tips_tv" android:paddingLeft="15dp" android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="暂时只支持北上广深等城市"/>
                </LinearLayout>
                <ImageView android:id="@+id/nav_3d_dynamic_cb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:src="@drawable/nav_checkout_icon" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@null"/>
            </RelativeLayout>
            <ImageView android:id="@+id/nav_3d_dynamic_cb_split_line" android:background="@drawable/nav_settings_divider_line" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_alignParentBottom="true" android:contentDescription="@null"/>
            <RelativeLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/nav_scale_layout" android:background="@drawable/nav_settings_middle_selector" android:layout_width="match_parent" android:layout_height="60dp">
                <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent">
                    <TextView android:textAppearance="@style/NavCommonListItemTitleText" android:id="@+id/nav_scale_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="导航比例尺智能缩放"/>
                    <TextView android:textAppearance="@style/NavCommonListItemTipsText" android:gravity="center_vertical" android:id="@+id/nav_scale_tips_tv" android:paddingLeft="15dp" android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="导航中地图自动放大或缩小"/>
                </LinearLayout>
                <ImageView android:id="@+id/nav_scale_cb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:src="@drawable/nav_checkout_icon" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@null"/>
            </RelativeLayout>
            <ImageView android:background="@drawable/nav_settings_divider_line" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_alignParentBottom="true" android:contentDescription="@null"/>
            <RelativeLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/nav_save_power_layout" android:background="@drawable/nav_settings_middle_selector" android:layout_width="match_parent" android:layout_height="60dp">
                <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent">
                    <TextView android:textAppearance="@style/NavCommonListItemTitleText" android:id="@+id/nav_save_power_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="自动开启省电模式"/>
                    <TextView android:textAppearance="@style/NavCommonListItemTipsText" android:gravity="center_vertical" android:id="@+id/nav_save_power_tips_tv" android:paddingLeft="15dp" android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="电量低于35%关闭导航动画效果"/>
                </LinearLayout>
                <ImageView android:id="@+id/nav_save_power_cb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:src="@drawable/nav_checkout_icon" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@null"/>
            </RelativeLayout>
            <ImageView android:background="@drawable/nav_settings_divider_line" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_alignParentBottom="true" android:contentDescription="@null"/>
            <RelativeLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/nav_car_logo_to_en_red_line_layout" android:background="@drawable/nav_settings_middle_selector" android:layout_width="match_parent" android:layout_height="60dp">
                <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent">
                    <TextView android:textAppearance="@style/NavCommonListItemTitleText" android:id="@+id/nav_car_logo_to_en_red_line_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="显示车标到终点红色连线"/>
                    <TextView android:textAppearance="@style/NavCommonListItemTipsText" android:gravity="center_vertical" android:id="@+id/nav_car_logo_to_en_red_line_tips_tv" android:paddingLeft="15dp" android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="红线连接终点并指向终点方向"/>
