<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@drawable/common_item_bg" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:background="@drawable/card_filmpet_bg" android:layout_width="wrap_content" android:layout_height="150dp">
        <com.android.volley.toolbox.NetworkImageView android:id="@+id/item_movie_image" android:layout_width="100dp" android:layout_height="match_parent" android:src="@drawable/default_movie" android:scaleType="centerCrop"/>
        <LinearLayout android:orientation="vertical" android:layout_width="280dp" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
            <TextView android:textSize="@dimen/card_title_size" android:textColor="@color/white" android:id="@+id/item_movie_title" android:layout_width="280dp" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:singleLine="true"/>
            <TextView android:textSize="@dimen/card_subtitle_size" android:textColor="@color/fifty_percent_white" android:ellipsize="end" android:id="@+id/item_movie_subtitle" android:layout_width="280dp" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:maxLines="5"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
