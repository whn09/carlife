<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="#66000000" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/social_share_panel" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <TextView android:textSize="17sp" android:textColor="#49526f" android:gravity="center" android:id="@+id/social_share_title" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="5dp" android:text="分享方式"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp">
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/weixin" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageView android:layout_gravity="center_horizontal" android:id="@+id/weixin_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/bdav_social_share_weixin_selector"/>
                <TextView android:layout_gravity="center_horizontal" android:id="@+id/weixin_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="微信" style="@style/Text_NaviMenuRouteSearchText"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/friend" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageView android:layout_gravity="center_horizontal" android:id="@+id/friend_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/bdav_social_share_fiend_selector"/>
                <TextView android:layout_gravity="center_horizontal" android:id="@+id/friend_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="朋友圈" style="@style/Text_NaviMenuRouteSearchText"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/weibo" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageView android:layout_gravity="center_horizontal" android:id="@+id/weibo_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/bdav_social_share_weibo_selector"/>
                <TextView android:layout_gravity="center_horizontal" android:id="@+id/weibo_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="微博" style="@style/Text_NaviMenuRouteSearchText"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/duanxin" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageView android:layout_gravity="center_horizontal" android:id="@+id/duanxin_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/bdav_social_share_duanxin_selector"/>
                <TextView android:layout_gravity="center_horizontal" android:id="@+id/duanxin_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="短信" style="@style/Text_NaviMenuRouteSearchText"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/social_share_close_panel" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="15dp">
            <TextView android:textSize="20sp" android:textColor="#ffffff" android:gravity="center_vertical" android:id="@+id/tv_route_search_close" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="关闭"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
