<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/common_title_bar" layout="@layout/carlife_common_title_bar_new"/>
    <ScrollView android:id="@+id/scroll_view" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/common_title_bar">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <FrameLayout android:layout_width="72dp" android:layout_height="60dp"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/goto_setting_layout" android:background="@drawable/com_bg_item_selector" android:clickable="true" android:layout_width="match_parent" android:layout_height="60dp" android:layout_weight="1">
                    <TextView android:textSize="20sp" android:textColor="@color/cl_text_a5_content" android:gravity="center_vertical" android:id="@+id/goto_setting" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
                    <View android:background="@color/cl_line_a1_item" android:layout_width="match_parent" android:layout_height="2px"/>
                </LinearLayout>
                <FrameLayout android:layout_width="72dp" android:layout_height="60dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <FrameLayout android:layout_width="72dp" android:layout_height="60dp"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/authorization_request_layout" android:background="@drawable/com_bg_item_selector" android:clickable="true" android:layout_width="match_parent" android:layout_height="60dp" android:layout_weight="1">
                    <TextView android:textSize="20sp" android:textColor="@color/cl_text_a5_content" android:gravity="center_vertical" android:id="@+id/authorization_request" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
                    <View android:background="@color/cl_line_a1_item" android:layout_width="match_parent" android:layout_height="2px"/>
                </LinearLayout>
                <FrameLayout android:layout_width="72dp" android:layout_height="60dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <FrameLayout android:orientation="vertical" android:layout_width="72dp" android:layout_height="96dp"/>
                <LinearLayout android:orientation="vertical" android:background="@drawable/com_bg_item_selector" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="20sp" android:textColor="@color/cl_text_a5_content" android:id="@+id/check_title" android:paddingLeft="8dp" android:paddingTop="16dp" android:paddingRight="8dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <TextView android:textSize="14sp" android:textColor="@color/cl_text_a2_content" android:id="@+id/check_content" android:paddingLeft="8dp" android:paddingRight="56dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
                    <View android:background="@color/cl_line_a1_item" android:layout_width="match_parent" android:layout_height="2px"/>
                </LinearLayout>
                <FrameLayout android:orientation="vertical" android:layout_width="72dp" android:layout_height="96dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <FrameLayout android:orientation="vertical" android:layout_width="72dp" android:layout_height="60dp"/>
                <LinearLayout android:orientation="vertical" android:background="@drawable/com_bg_item_selector" android:layout_width="match_parent" android:layout_height="60dp" android:layout_weight="1">
                    <TextView android:textSize="20sp" android:textColor="@color/cl_text_a5_content" android:id="@+id/reboot" android:paddingLeft="8dp" android:paddingTop="14dp" android:paddingRight="8dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <View android:background="@color/cl_line_a1_item" android:layout_width="match_parent" android:layout_height="2px"/>
                </LinearLayout>
                <FrameLayout android:orientation="vertical" android:layout_width="72dp" android:layout_height="60dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
