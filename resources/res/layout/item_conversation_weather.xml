<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@drawable/common_item_bg" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/conversation_weather_title_root" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
        <TextView android:textSize="@dimen/card_title_size" android:textColor="@color/white" android:gravity="center_vertical" android:id="@+id/conversation_weather_title" android:layout_width="0dp" android:layout_height="match_parent" android:text="" android:singleLine="true" android:layout_weight="1"/>
        <TextView android:textSize="@dimen/card_subtitle_size" android:textColor="@color/fifty_percent_white" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/conversation_weather_pm" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="" android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/conversation_weather_add_root" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/conversation_weather_title_root"/>
</RelativeLayout>
