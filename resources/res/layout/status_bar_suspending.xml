<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/download_notification" android:background="@color/app_background" android:focusable="true" android:duplicateParentState="true" android:layout_width="match_parent" android:layout_height="wrap_content">
