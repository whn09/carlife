<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="287dp" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/top_content" android:paddingTop="12.5dp" android:paddingBottom="12.5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="#333333" android:gravity="center" android:id="@+id/title_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4.5dp"/>
            <FrameLayout android:gravity="center" android:layout_gravity="center" android:id="@+id/content" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:minWidth="112dp" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/bottom_bar" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="16sp" android:textColor="#ffffffff" android:gravity="center" android:id="@+id/first_btn" android:background="@drawable/com_common_btn_white_selector" android:focusable="true" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="0dp" android:layout_marginRight="0dp" android:text="取消" android:layout_weight="1"/>
            <TextView android:textSize="16sp" android:textColor="#ffffffff" android:gravity="center" android:id="@+id/second_btn" android:background="@drawable/com_common_btn_white_selector" android:focusable="true" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="0dp" android:layout_marginRight="0dp" android:text="确定" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/layout_list" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#333333" android:gravity="center" android:id="@+id/title_bar_list" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <FrameLayout android:gravity="center" android:layout_gravity="center" android:id="@+id/content_list" android:layout_width="match_parent" android:layout_height="wrap_content" android:minWidth="112dp"/>
    </LinearLayout>
</FrameLayout>
