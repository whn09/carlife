<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/background_light" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/local_map_download_list_city_info" android:paddingLeft="16dp" android:paddingTop="15dp" android:paddingRight="12dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/Text_Size_Pixel_21" android:textColor="@android:color/black" android:id="@+id/local_map_download_list_city_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginRight="6dp" android:layout_alignParentLeft="true"/>
        <TextView android:textSize="@dimen/Text_Size_Pixel_18" android:id="@+id/local_map_download_list_city_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/local_map_download_list_city_expand" android:layout_alignBaseline="@+id/local_map_download_list_city_name"/>
        <TextView android:textSize="12sp" android:textColor="#b8b8b8" android:ellipsize="end" android:id="@+id/local_map_download_list_city_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:singleLine="true" android:layout_toLeftOf="@+id/local_map_download_list_city_status" android:layout_toRightOf="@+id/local_map_download_list_city_name" android:layout_alignBaseline="@+id/local_map_download_list_city_name"/>
        <ProgressBar android:id="@+id/local_map_download_list_city_progress" android:layout_width="match_parent" android:layout_height="3dp" android:layout_marginLeft="3dp" android:layout_marginTop="6dp" android:max="100" android:progressDrawable="@drawable/progressbar_normal" android:layout_toLeftOf="@+id/local_map_download_list_city_expand" android:layout_below="@+id/local_map_download_list_city_name" style="?android:attr/progressBarStyleHorizontal"/>
        <ImageView android:id="@+id/local_map_download_list_city_expand" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginRight="3dp" android:layout_alignParentRight="true" android:layout_centerInParent="true"/>
        <TextView android:textSize="10dp" android:textColor="#b8b8b8" android:id="@+id/local_map_download_list_base_warning_msg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginTop="6dp" android:text="注意：基础必备包，不可删除！" android:layout_below="@+id/local_map_download_list_city_name"/>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/local_map_download_list_city_action_bar" android:paddingLeft="12dp" android:paddingTop="0dp" android:paddingRight="12dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:textSize="15dp" android:textColor="@color/local_map_action_bar_text_color" android:id="@+id/local_map_download_list_city_view_map" android:background="@drawable/btn_default" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="3dp" android:text="查看地图" android:layout_weight="1"/>
        <Button android:textSize="15dp" android:textColor="@color/local_map_action_bar_text_color" android:id="@+id/local_map_download_list_city_download" android:background="@drawable/btn_default" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="3dp" android:layout_weight="1"/>
        <Button android:textSize="15dp" android:textColor="@color/local_map_action_bar_text_color" android:id="@+id/local_map_download_list_city_delete" android:background="@drawable/btn_default" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="3dp" android:text="删除" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
