<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/title_bar" layout="@layout/carlife_common_title_bar_new"/>
    <RelativeLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_below="@+id/title_bar">
        <ImageView android:id="@+id/iv_carlife_logo" android:layout_width="64dp" android:layout_height="64dp" android:src="@drawable/ic_launcher" android:scaleType="fitCenter"/>
        <TextView android:textSize="18sp" android:textColor="@color/cl_text_a5_title" android:id="@+id/tv_version_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="8dp" android:layout_toRightOf="@+id/iv_carlife_logo"/>
        <ImageView android:layout_width="200dp" android:layout_height="20dp" android:layout_marginTop="8dp" android:src="@drawable/icon_head" android:scaleType="fitCenter" android:layout_below="@+id/tv_version_code" android:layout_alignLeft="@+id/tv_version_code"/>
    </RelativeLayout>
    <TextView android:textSize="10sp" android:textColor="@color/cl_text_a5_title" android:id="@+id/tv_version_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:text="@string/version_right" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="10sp" android:textColor="@color/cl_text_a5_title" android:id="@+id/tv_map_gps_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_marginBottom="2dp" android:text="@string/map_gps_number" android:layout_above="@+id/tv_version_right" android:layout_centerHorizontal="true"/>
    <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="40dp" android:layout_above="@+id/tv_map_gps_number" android:layout_alignParentBottom="true">
        <Button android:id="@+id/btn_check_version" android:text="@string/check_update" style="@style/AboutButton"/>
        <Button android:id="@+id/btn_service_terms" android:text="@string/service_terms" style="@style/AboutButton"/>
    </LinearLayout>
</RelativeLayout>
