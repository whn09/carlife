<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center" android:orientation="horizontal" android:id="@+id/layout_poi_panel" android:background="@drawable/carmode_list_bg_selector" android:layout_width="match_parent" android:layout_height="70dp">
    <ProgressBar android:id="@+id/progress_antigeo" android:background="@drawable/common_loading_drop" android:visibility="visible" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginLeft="20dp" android:indeterminateDrawable="@drawable/common_loading"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/layout_illegal_detail" android:background="@drawable/carmode_list_bg_selector" android:focusable="true" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
        <TextView android:textSize="20sp" android:textColor="#ffffff" android:ellipsize="marquee" android:id="@+id/tv_poi_title" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="科技大厦" android:singleLine="true"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <TextView android:textSize="14sp" android:textColor="#787d8c" android:ellipsize="marquee" android:gravity="left" android:id="@+id/tv_poi_addr" android:layout_width="0dp" android:layout_height="wrap_content" android:text="北京市海淀区上地信息路9号" android:maxLines="2" android:layout_weight="1"/>
            <TextView android:textSize="14sp" android:textColor="#36bfff" android:gravity="center" android:id="@+id/tv_poi_detail" android:background="@drawable/bnav_common_bg_pressed_mask_selector_night" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/detail_poi"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/btn_fav" android:background="@drawable/carmode_btn_blue_bg_selector" android:focusable="true" android:clickable="true" android:layout_width="120dp" android:layout_height="match_parent">
        <ProgressBar android:id="@+id/progress_isfav" android:background="@drawable/common_loading_drop" android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp" android:indeterminateDrawable="@drawable/common_loading"/>
        <TextView android:textSize="25sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tv_poi_fav" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/detail_add_favorite"/>
    </LinearLayout>
</LinearLayout>
