<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:paddingLeft="@dimen/common_listview_item_padding_left" android:paddingRight="@dimen/common_listview_item_padding_right" android:layout_width="match_parent" android:layout_height="96dp">
    <RelativeLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="20sp" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        <TextView android:textSize="14sp" android:id="@+id/tv_addr" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:singleLine="true" android:layout_below="@+id/tv_name"/>
        <TextView android:textSize="14sp" android:id="@+id/tv_go" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="4dp" android:singleLine="true" android:layout_toRightOf="@+id/tv_addr" android:layout_below="@+id/tv_name"/>
        <TextView android:textSize="14sp" android:id="@+id/tv_num" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:singleLine="true" android:layout_below="@+id/tv_addr"/>
        <TextView android:textSize="14sp" android:id="@+id/tv_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:singleLine="true" android:layout_toRightOf="@+id/tv_num" android:layout_below="@+id/tv_addr"/>
    </RelativeLayout>
    <View android:id="@+id/cl_line" android:background="@color/cl_line_a1_item" android:layout_width="match_parent" android:layout_height="@dimen/common_item_line" android:layout_alignParentBottom="true"/>
</RelativeLayout>
