<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/layout_group_list_item" android:background="@drawable/carmode_list_bg_selector" android:paddingLeft="0.5dp" android:layout_width="match_parent" android:layout_height="70dp" android:minHeight="70dp">
    <RelativeLayout android:gravity="center_vertical" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="70dp" android:minHeight="70dp">
        <TextView android:textSize="20sp" android:textColor="@color/carmode_text_main_color" android:ellipsize="end" android:id="@+id/catalog_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:singleLine="true" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="14sp" android:textColor="@color/carmode_text_second_color" android:id="@+id/already_download" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:text="@string/search_district_dowloaded_district" android:singleLine="true" android:layout_toRightOf="@+id/catalog_tv" android:layout_alignBaseline="@+id/catalog_tv" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/eclipse_iv" android:paddingLeft="12dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_list_eclipse_up" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@string/app_name"/>
        <TextView android:textSize="14sp" android:textColor="@color/carmode_text_second_color" android:id="@+id/is_current_city" android:paddingLeft="12dp" android:paddingRight="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/search_district_current_district" android:singleLine="true" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/list_item_divider" android:background="#2e333c" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
