<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@null" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/route_plan_title_bar" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:gravity="center" android:id="@+id/ic_back" android:background="@drawable/bnav_titlebar_back_bg_selector" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:scaleType="centerInside" android:layout_alignParentLeft="true"/>
        <ImageView android:gravity="center" android:id="@+id/ic_open_preference" android:background="@drawable/preference_bg_selector" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:scaleType="centerInside" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <com.baidu.navi.view.draglistview.NaviScrollView android:id="@+id/scroll_view_layout" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="20dp" android:layout_below="@+id/route_plan_title_bar" android:fadeScrollbars="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_route_plan_start_node" android:focusable="true" android:focusableInTouchMode="true" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <RelativeLayout android:id="@+id/rp_add_btn_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_alignParentBottom="true">
                    <ImageView android:id="@+id/iv_route_plan_add_btn" android:background="@drawable/bnav_rp_btn_add" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="60dp" android:layout_below="@+id/iv_route_plan_add_btn" android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <com.baidu.navi.view.draglistview.DragListView android:id="@+id/drag_sort_list_1" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:listSelector="@android:color/transparent" android:cacheColorHint="@android:color/transparent" android:dividerHeight="1dp" android:layout_toRightOf="@+id/rp_add_btn_layout"/>
            </RelativeLayout>
            <ImageView android:id="@+id/route_and_clear_layout_top_divider" android:background="@drawable/divide_list" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginBottom="10dp"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/btn_route_and_clear_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp">
                <Button android:textSize="18sp" android:textColor="#ff3f484b" android:gravity="center" android:id="@+id/btn_clear_route" android:background="@drawable/route_plan_clean_btn_selector" android:clickable="true" android:layout_width="0dp" android:layout_height="45dp" android:layout_marginRight="13dp" android:text="@string/route_plan_clear_nav_route" android:layout_weight="1"/>
                <Button android:textSize="18sp" android:textColor="#ffffffff" android:gravity="center" android:id="@+id/ll_route_plan" android:background="@drawable/route_plan_navi_btn_selector" android:clickable="true" android:layout_width="0dp" android:layout_height="45dp" android:text="@string/route_plan_calc_nav_route" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/history_text_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <TextView android:textSize="14sp" android:gravity="center_vertical" android:id="@+id/histroy_text_view" android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginLeft="10dp" android:text="@string/route_plan_history"/>
            </LinearLayout>
            <RelativeLayout android:focusable="false" android:layout_width="match_parent" android:layout_height="match_parent">
                <ListView android:id="@+id/history_route_list" android:background="@android:color/transparent" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:listSelector="@android:color/transparent" android:cacheColorHint="@android:color/transparent" android:dividerHeight="1dp"/>
            </RelativeLayout>
        </LinearLayout>
    </com.baidu.navi.view.draglistview.NaviScrollView>
    <RelativeLayout android:id="@+id/preference_list_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
</RelativeLayout>
