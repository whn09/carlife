<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/item_layout" android:background="@color/carmode_common_bg" android:layout_width="match_parent" android:layout_height="70dp" android:minHeight="60dp">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <TextView android:textSize="20sp" android:textColor="@color/carmode_common_main_text" android:id="@+id/about_item_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/offline_data"/>
        <TextView android:textSize="14sp" android:textColor="@color/carmode_offline_status_text" android:id="@+id/about_item_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/offline_data"/>
    </LinearLayout>
    <View android:id="@+id/line_top" android:background="@color/carmode_common_bg" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_alignParentTop="true"/>
    <View android:id="@+id/line_bottom" android:background="@color/carmode_common_bg" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_alignParentBottom="true"/>
    <View android:id="@+id/line_left" android:background="@color/carmode_common_bg" android:layout_width="0.5dp" android:layout_height="70dp" android:layout_alignParentLeft="true"/>
    <View android:id="@+id/line_right" android:background="@color/carmode_common_bg" android:layout_width="0.5dp" android:layout_height="70dp" android:layout_alignParentRight="true"/>
</RelativeLayout>
