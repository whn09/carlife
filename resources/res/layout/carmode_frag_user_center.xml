<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/ll_user_center_new" android:background="#000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/user_login_layout" android:layout_width="match_parent" android:layout_height="170dp">
        <WebView android:id="@+id/web_view_head" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <com.baidu.navi.view.MapTitleBar android:id="@+id/title_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true"/>
        <FrameLayout android:layout_width="match_parent" android:layout_height="50dp" android:layout_alignParentBottom="true">
            <RelativeLayout android:background="#000000" android:layout_width="match_parent" android:layout_height="50dp" android:alpha="0.2"/>
            <RelativeLayout android:orientation="horizontal" android:id="@+id/mileage_score_layout" android:layout_width="match_parent" android:layout_height="50dp">
                <ImageView android:id="@+id/divider_vertical" android:background="#8a9db6" android:layout_width="1dp" android:layout_height="22dp" android:layout_centerInParent="true"/>
                <LinearLayout android:gravity="bottom|center_vertical|center_horizontal|center" android:orientation="vertical" android:id="@+id/mileage_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toLeftOf="@+id/divider_vertical">
                    <TextView android:textSize="14sp" android:textColor="#ffffff" android:id="@+id/distance_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/mileage_name"/>
                    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#ffffff" android:id="@+id/distance_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginBottom="3dp"/>
                </LinearLayout>
                <LinearLayout android:gravity="bottom|center_vertical|center_horizontal|center" android:orientation="vertical" android:id="@+id/score_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="0dp" android:layout_toRightOf="@+id/divider_vertical">
                    <TextView android:textSize="14sp" android:textColor="#ffffff" android:id="@+id/score_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/score_name"/>
                    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#ffffff" android:id="@+id/score_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginBottom="3dp"/>
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/user_data_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.baidu.navi.view.NaviGridView android:gravity="center" android:id="@+id/user_center_grid_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:listSelector="@drawable/carmode_list_bg_selector" android:cacheColorHint="@android:color/transparent" android:horizontalSpacing="0dp" android:verticalSpacing="0dp" android:stretchMode="columnWidth" android:numColumns="3" android:scrollbarFadeDuration="0"/>
    </LinearLayout>
</LinearLayout>
