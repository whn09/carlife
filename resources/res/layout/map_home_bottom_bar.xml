    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/layout_home_route" android:background="@drawable/bnav_common_bg_pressed_mask_selector" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
