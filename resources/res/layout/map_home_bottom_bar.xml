<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/layout_home_bottom" android:background="@drawable/bnav_bg_home_bottom_bar" android:layout_width="match_parent" android:layout_height="wrap_content">
