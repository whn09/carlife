        <TextView android:textSize="14sp" android:textColor="#333333" android:layout_gravity="center" android:id="@+id/text_home_iwantgo" android:paddingTop="@dimen/home_bottom_btn_padding" android:paddingBottom="@dimen/home_bottom_btn_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/i_want_go"/>
