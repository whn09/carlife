<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/common_top_title" android:layout_width="match_parent" android:layout_height="@dimen/common_title_bar_height">
        <ImageButton android:id="@+id/ib_left" android:background="@drawable/com_bg_btn_selector" android:layout_width="@dimen/common_icon_small" android:layout_height="@dimen/common_icon_small" android:layout_marginLeft="16dp" android:src="@drawable/com_ic_back" android:layout_centerVertical="true"/>
        <TextView android:textSize="20sp" android:textColor="@color/mydvr_contact_title_selected" android:gravity="center" android:id="@+id/tv_video" android:layout_width="70dp" android:layout_height="40dp" android:layout_marginLeft="10dp" android:text="@string/home_my_mydvr_video" android:layout_toRightOf="@+id/ib_left" android:layout_centerVertical="true"/>
        <View android:id="@+id/view_video_bottom_line" android:background="@color/mydvr_contact_title_bottom_line" android:layout_width="70dp" android:layout_height="3dp" android:layout_below="@+id/tv_video" android:layout_alignLeft="@+id/tv_video"/>
        <View android:id="@+id/tv_line" android:background="@color/mydvr_contact_line" android:layout_width="1dp" android:layout_height="16dp" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:layout_toRightOf="@+id/tv_video" android:layout_centerVertical="true"/>
        <TextView android:textSize="20sp" android:textColor="@color/mydvr_contact_title_not_selected" android:gravity="center" android:id="@+id/tv_photo" android:layout_width="70dp" android:layout_height="40dp" android:text="@string/home_my_mydvr_photo" android:layout_toRightOf="@+id/tv_line" android:layout_centerVertical="true"/>
        <View android:id="@+id/view_photo_bottom_line" android:background="@color/mydvr_contact_title_bottom_line" android:visibility="gone" android:layout_width="70dp" android:layout_height="3dp" android:layout_below="@+id/tv_photo" android:layout_alignLeft="@+id/tv_photo"/>
    </RelativeLayout>
    <TextView android:textSize="20sp" android:textColor="@color/mydvr_contact_title_not_selected" android:id="@+id/tv_no_video" android:paddingTop="50dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/home_my_mydvr_no_video" android:layout_centerInParent="true"/>
    <TextView android:textSize="20sp" android:textColor="@color/mydvr_contact_title_not_selected" android:id="@+id/tv_no_photo" android:paddingTop="50dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/home_my_mydvr_no_photo" android:layout_centerInParent="true"/>
    <FrameLayout android:id="@+id/layout_list" android:paddingLeft="20dp" android:paddingTop="5dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/common_top_title">
        <ListView android:id="@+id/lv_mydvr_video" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@drawable/com_bg_item_selector" android:cacheColorHint="@android:color/transparent" android:divider="@color/cl_line_a1_item" android:dividerHeight="@dimen/common_item_line"/>
        <ListView android:id="@+id/lv_mydvr_photo" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@drawable/com_bg_item_selector" android:cacheColorHint="@android:color/transparent" android:divider="@color/cl_line_a1_item" android:dividerHeight="@dimen/common_item_line"/>
    </FrameLayout>
</RelativeLayout>
