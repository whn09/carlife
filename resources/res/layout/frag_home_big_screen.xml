            </RelativeLayout>
            <View android:id="@+id/card_bank_1" android:background="@color/transparent" android:visibility="gone" android:layout_width="@dimen/home_card_big_screen_margin" android:layout_height="@dimen/home_card_focus_view_height"/>
            <RelativeLayout android:layout_gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/home_card_left_padding" android:layout_weight="1">
                <com.baidu.carlife.view.HomeCardView android:id="@+id/home_card_music" android:focusable="true" android:layout_width="@dimen/home_card_focus_view_width" android:layout_height="@dimen/home_card_focus_view_height" app:cardBackground="@drawable/com_shape_home_card_music_normal" app:cardTitle="@string/home_card_media" app:firstIv="@drawable/com_home_ic_music_play_selector" app:cardType="Music"/>
            </RelativeLayout>
            <View android:id="@+id/card_bank_2" android:background="@color/transparent" android:visibility="gone" android:layout_width="@dimen/home_card_big_screen_margin" android:layout_height="@dimen/home_card_focus_view_height"/>
            <RelativeLayout android:layout_gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/home_card_left_padding" android:layout_weight="1">
                <com.baidu.carlife.view.HomeCardView android:id="@+id/home_card_discover" android:focusable="true" android:layout_width="@dimen/home_card_focus_view_width" android:layout_height="@dimen/home_card_focus_view_height" app:cardBackground="@drawable/com_shape_home_card_discover_normal" app:cardTitle="@string/home_card_discover" app:info="@string/home_card_discover_info" app:firstIv="@drawable/home_ic_discover_card" app:cardType="Discover"/>
            </RelativeLayout>
            <View android:id="@+id/card_bank_3" android:background="@color/transparent" android:visibility="gone" android:layout_width="@dimen/home_card_big_screen_margin" android:layout_height="@dimen/home_card_focus_view_height"/>
            <RelativeLayout android:layout_gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/home_card_left_padding" android:layout_weight="1">
                <com.baidu.carlife.view.HomeCardView android:id="@+id/home_card_carlife" android:focusable="true" android:layout_width="@dimen/home_card_focus_view_width" android:layout_height="@dimen/home_card_focus_view_height" app:cardBackground="@drawable/com_shape_home_card_carlife_normal" app:vehicleName="@drawable/home_ic_carlife_name" app:vehicleLogo="@drawable/home_ic_carlife_card" app:cardType="Carlife"/>
            </RelativeLayout>
            <View android:id="@+id/card_bank_4" android:background="@color/transparent" android:visibility="gone" android:layout_width="@dimen/home_card_big_screen_margin" android:layout_height="@dimen/home_card_focus_view_height"/>
            <RelativeLayout android:layout_gravity="center" android:id="@+id/viewadapt" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/home_card_left_padding" android:layout_weight="1">
                <com.baidu.carlife.view.HomeCardView android:id="@+id/home_card_exit" android:focusable="true" android:layout_width="@dimen/home_card_focus_view_width" android:layout_height="@dimen/home_card_focus_view_height" app:cardBackground="@drawable/com_shape_home_card_exit_normal" app:cardTitle="@string/home_card_exit" app:info="@string/home_card_exit_info" app:firstIv="@drawable/home_ic_quit" app:cardType="ExitCarlife"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
