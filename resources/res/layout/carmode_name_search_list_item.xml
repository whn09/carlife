<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginBottom="0.5dp" android:minHeight="60dp">
    <ImageView android:id="@+id/iv_name_search_list_history" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="32dp" android:src="@drawable/carmode_search_ic_place_small" android:layout_centerVertical="true"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_toLeftOf="@+id/btn_fill" android:layout_toRightOf="@+id/iv_name_search_list_history" android:layout_centerVertical="true">
        <TextView android:textSize="20dp" android:textColor="@color/cp_map_cont_a" android:id="@+id/tv_name_search_list" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="国人通信大厦" android:singleLine="true"/>
        <TextView android:textSize="15sp" android:id="@+id/tv_addr_search_list" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="科技中三路5号" android:singleLine="true" style="@style/Text.Common_SecondText_CarMode"/>
    </LinearLayout>
    <ImageView android:id="@+id/btn_fill" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="32dp" android:src="@drawable/bnav_rp_icon_sug_from_history_right_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <View android:id="@+id/list_item_divider" android:background="@color/cp_map_line_a" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginRight="32dp" android:layout_toRightOf="@+id/iv_name_search_list_history" android:layout_alignParentBottom="true" android:contentDescription="@null"/>
</RelativeLayout>
