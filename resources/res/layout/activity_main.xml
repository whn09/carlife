<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:id="@+id/map_frame" android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                <View android:id="@+id/main_anim_view" android:layout_width="5dp" android:layout_height="5dp"/>
                <RelativeLayout android:id="@+id/contain_frame" android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent">
                    <FrameLayout android:id="@+id/content_frame" android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent"/>
                </RelativeLayout>
                <include android:visibility="gone" layout="@layout/tips_navi"/>
                <include android:visibility="gone" layout="@layout/tips_music"/>
                <include android:visibility="gone" layout="@layout/tips_wechat"/>
                <include android:id="@+id/tips_phone_end" android:visibility="gone" layout="@layout/tips_phone_end"/>
                <include android:id="@+id/tips_phone_incoming" android:visibility="gone" layout="@layout/tips_phone_incoming"/>
            </RelativeLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_bottom_control" android:layout_width="match_parent" android:layout_height="@dimen/frag_main_bottom_bar_height" android:layout_weight="0">
                <ImageButton android:id="@+id/iv_home" android:background="@drawable/com_bg_tab_bottom_selector" android:nextFocusRight="@+id/iv_phone_book" android:layout_width="0dp" android:layout_height="match_parent" android:src="@drawable/com_ic_home_selector" android:layout_weight="1" android:contentDescription="BottomHome">
                    <requestFocus/>
                </ImageButton>
                <ImageButton android:id="@+id/iv_phone_book" android:background="@drawable/com_bg_tab_bottom_selector" android:layout_width="0dp" android:layout_height="match_parent" android:src="@drawable/com_ic_phone_selector" android:layout_weight="1" android:contentDescription="BottomPhoneBook"/>
                <ImageButton android:id="@+id/iv_voice_focus_bg" android:background="@drawable/com_bg_tab_bottom_selector" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:contentDescription="BottomVoice"/>
                <ImageButton android:id="@+id/iv_navi" android:background="@drawable/com_bg_tab_bottom_selector" android:layout_width="0dp" android:layout_height="match_parent" android:src="@drawable/com_ic_map_selector" android:layout_weight="1" android:contentDescription="BottomNavi"/>
                <ImageButton android:id="@+id/iv_music" android:background="@drawable/com_bg_tab_bottom_selector" android:layout_width="0dp" android:layout_height="match_parent" android:src="@drawable/com_ic_music_selector" android:layout_weight="1" android:contentDescription="BottomMusic"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:id="@+id/iv_voice_bg" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/com_ic_voice_bg" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
        <com.baidu.carlife.logic.voice.LightVoiceMicView android:id="@+id/iv_voice" android:layout_width="56dp" android:layout_height="56dp" android:layout_marginBottom="@dimen/default_12" android:src="@drawable/com_ic_voice_selector" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:contentDescription="BottomVoice"/>
        <ViewStub android:id="@+id/stub_progress" android:layout="@layout/common_ic_loading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
        <TextView android:gravity="center_horizontal" android:id="@+id/guide_hint_txt" android:background="@drawable/guide_listen_bg" android:paddingTop="@dimen/channel_guide_hint_text_margin_top" android:visibility="gone" android:layout_width="@dimen/dialog_guide_channel_hint_width" android:layout_height="@dimen/dialog_guide_channel_hint_height" android:layout_marginBottom="70dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" style="@style/Text.channelHint"/>
        <RelativeLayout android:id="@+id/dialog_holder" android:background="#b2000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <RelativeLayout android:id="@+id/wmv_holder" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <TextView android:textSize="16sp" android:textColor="@color/cl_text_c" android:id="@+id/activity_main_toast_text" android:background="@drawable/shape_for_toast_text" android:paddingLeft="16dp" android:paddingTop="12dp" android:paddingRight="16dp" android:paddingBottom="12dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="256dp" android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
