<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/nav_favorite_dest_item_layout" android:paddingLeft="@dimen/common_listview_item_padding_left" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/dest_info_layout" android:layout_width="wrap_content" android:layout_height="64dp" android:layout_weight="1">
            <TextView android:textSize="20sp" android:textColor="@color/cl_text_a5_title" android:gravity="center_vertical" android:id="@+id/dest_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="国人科技园" android:singleLine="true"/>
            <TextView android:textSize="14sp" android:id="@+id/dest_description" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="深圳市龙岗区" android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/dest_delete_layout" android:background="@drawable/carlife_list_icon_bg_press_selector" android:clickable="true" android:layout_width="80dp" android:layout_height="match_parent" android:layout_weight="0">
            <ImageView android:layout_gravity="center" android:id="@+id/btn_dest_delete" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/com_ic_delete_off"/>
        </LinearLayout>
    </LinearLayout>
    <View android:id="@+id/cl_line" android:background="@color/cl_line_a1_item" android:layout_width="match_parent" android:layout_height="@dimen/common_item_line" android:layout_marginRight="@dimen/common_listview_item_padding_right" android:layout_alignParentBottom="true"/>
</LinearLayout>
