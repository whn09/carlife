<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/title_bar" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_toLeftOf="@+id/ll_route_detail">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/layout_back" android:background="@drawable/carlife_map_its_bg_selector" android:focusable="true" android:layout_width="56dp" android:layout_height="56dp" android:layout_marginLeft="12dp" android:layout_alignParentLeft="true">
            <ImageView android:gravity="center" android:id="@+id/left_imageview" android:src="@drawable/map_ic_back" android:scaleType="centerInside" android:layout_alignParentLeft="true" style="@style/MapButton"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/layout_perference" android:background="@drawable/carlife_map_its_bg_selector" android:focusable="true" android:layout_width="104dp" android:layout_height="56dp" android:layout_marginRight="12dp" android:layout_alignParentRight="true">
            <RelativeLayout android:id="@+id/rl_pre" android:background="@drawable/map_bg_btn_selector" android:layout_width="104dp" android:layout_height="56dp">
                <TextView android:textSize="16dp" android:textColor="@color/cl_other_c" android:gravity="center_vertical" android:id="@+id/tv_pre" android:layout_width="wrap_content" android:layout_height="56dp" android:text="智能推荐" android:drawableRight="@drawable/map_ic_more_selected" android:drawablePadding="2dp" android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/map_control_panel" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toLeftOf="@+id/ll_route_detail">
        <RelativeLayout android:id="@+id/map_control_left_panel" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginBottom="12dp">
            <RelativeLayout android:gravity="center" android:id="@+id/location_layout" android:background="@drawable/carlife_map_its_bg_selector" android:focusable="true" android:layout_width="56dp" android:layout_height="56dp" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true">
                <ImageView android:id="@+id/location_btn" android:nextFocusRight="@+id/btn_zoom_in" android:nextFocusUp="@+id/map_control_left_panel_menu" android:src="@drawable/map_ic_home_backparking" style="@style/MapButton"/>
                <ProgressBar android:id="@+id/locProgress" android:background="@drawable/ic_locate_loading" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" style="@style/LocationProgressStyle"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/map_scale_level_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginBottom="12dp" android:layout_toRightOf="@+id/location_layout" android:layout_alignParentBottom="true" android:layout_alignWithParentIfMissing="true">
                <TextView android:textColor="#333333" android:id="@+id/scale_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="100米" android:layout_centerHorizontal="true"/>
                <TextView android:id="@+id/scale_indicator" android:background="@drawable/nsdk_drawable_rg_ic_scale_indicator" android:paddingTop="0dp" android:layout_width="wrap_content" android:layout_height="7dp" android:layout_below="@+id/scale_title" android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/map_control_right_panel" android:background="#00000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_marginBottom="12dp">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/nav_zoom_panel" android:background="@drawable/map_bg_btn" android:padding="4dp" android:layout_width="56dp" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentBottom="true">
                <ImageView android:gravity="center" android:id="@+id/btn_zoom_in" android:background="@drawable/common_btn_bg_zoom_in_selector" android:focusable="true" android:layout_width="match_parent" android:layout_height="48dp" android:src="@drawable/map_ic_home_enlarge" android:scaleType="center"/>
                <View android:id="@+id/zoom_dirver" android:background="#d9d9d9" android:layout_width="match_parent" android:layout_height="1px"/>
                <ImageView android:gravity="center" android:id="@+id/btn_zoom_out" android:background="@drawable/common_btn_bg_zoom_out_selector" android:focusable="true" android:layout_width="match_parent" android:layout_height="48dp" android:src="@drawable/map_ic_home_narrow" android:scaleType="center"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/layout_its_switch" android:background="@drawable/carlife_map_its_bg_selector" android:focusable="true" android:layout_width="56dp" android:layout_height="56dp" android:layout_marginBottom="4dp" android:layout_above="@+id/nav_zoom_panel" android:layout_alignParentRight="true">
                <ImageView android:id="@+id/image_its_switch" android:src="@drawable/map_ic_com_traffic_off" android:contentDescription="its" style="@style/MapButton"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/ll_route_detail" android:background="@drawable/com_shape_dialog_bg" android:layout_width="@dimen/nsdk_rd_rl_route_outline__size" android:layout_height="match_parent" android:layout_alignParentRight="true" android:onClick="true">
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_route_outline" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/ll_start_navi"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_start_navi" android:background="@drawable/nsdk_drawable_rd_start_navi_selector" android:focusable="true" android:layout_width="192dp" android:layout_height="40dp" android:layout_marginTop="4dp" android:layout_marginBottom="12dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">
            <TextView android:textSize="16sp" android:textColor="@color/cl_text_a5_bgtext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/nsdk_string_start_navi"/>
            <TextView android:textSize="16sp" android:textColor="@color/cl_text_a5_bgtext" android:layout_gravity="center_vertical" android:id="@+id/tv_start_navi" android:visibility="gone" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
