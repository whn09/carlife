<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@drawable/iv_launch" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/login_head" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <com.baidu.navi.view.CircularImage android:layout_gravity="center" android:id="@+id/login_circular_head" android:layout_width="70dp" android:layout_height="70dp" android:src="@drawable/bnav_user_center_user_head"/>
        <ImageView android:layout_gravity="center" android:id="@+id/login_circular_head_outline" android:visibility="gone" android:layout_width="70dp" android:layout_height="70dp" android:src="@drawable/carmode_user_center_user_head_outline" android:contentDescription="@null"/>
        <TextView android:textSize="14sp" android:textColor="#a5aec3" android:gravity="center" android:id="@+id/login_head_tip" android:visibility="gone" android:layout_width="70dp" android:layout_height="70dp" android:text="点击登录"/>
    </FrameLayout>
    <TextView android:textSize="12sp" android:textColor="#a5aec3" android:id="@+id/login_user_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/default_user_name" android:layout_below="@+id/login_head" android:layout_centerHorizontal="true"/>
    <RelativeLayout android:id="@+id/login_mile_panel" android:background="#a61d2026" android:layout_width="match_parent" android:layout_height="45dp" android:layout_below="@+id/login_user_name" android:layout_alignParentBottom="true">
        <TextView android:textSize="14sp" android:textColor="#a5aec3" android:gravity="center_vertical" android:id="@+id/login_total_mile" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="您已经行驶35600KM 绕地球2圈" android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
