<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/temp" android:paddingLeft="32dp" android:paddingRight="32dp" android:layout_width="match_parent" android:layout_height="@dimen/softinput_keyboard_height">
    <Button android:textSize="18sp" android:id="@+id/btn_mode" android:background="@drawable/input_bg_btn_mode_selector" style="@style/SoftInputBtn"/>
    <ImageButton android:id="@+id/key_delete" android:layout_marginLeft="5dp" android:src="@drawable/input_ic_delete_selector" android:layout_toRightOf="@+id/btn_mode" style="@style/SoftInputBtn"/>
    <ImageButton android:id="@+id/key_space" android:src="@drawable/input_ic_space_selector" android:layout_toRightOf="@+id/key_delete" style="@style/SoftInputBtn"/>
