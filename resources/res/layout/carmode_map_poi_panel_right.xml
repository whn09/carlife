<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center" android:orientation="vertical" android:id="@+id/layout_poi_panel" android:background="@drawable/carmode_list_bg_selector" android:layout_width="@dimen/common_menu_right_width" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@drawable/com_shape_dialog_bg" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="18sp" android:textColor="@color/cl_text_a5_title" android:gravity="center" android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="50dp" android:text="@string/nsdk_string_open_detail" android:singleLine="true"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:orientation="horizontal" android:id="@+id/carmode_map_poi_panel_right_place_layout" android:background="@drawable/com_bg_item_selector" android:paddingLeft="16dp" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="70dp">
                <TextView android:textSize="18sp" android:textColor="@color/cl_text_a5_content" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/carmode_map_poi_panel_right_place" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="13dp" android:maxWidth="200dp" android:text="地址搜寻中" android:singleLine="true"/>
                <TextView android:textSize="12sp" android:textColor="@color/cl_text_a2_content" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/carmode_map_poi_panel_right_addr" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:maxWidth="200dp" android:text="地址搜寻中" android:singleLine="true" android:layout_below="@+id/carmode_map_poi_panel_right_place"/>
                <ImageView android:id="@+id/carmode_map_poi_panel_right_fav_btn" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginRight="5dp" android:src="@drawable/map_ic_address_collect_off" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout android:orientation="horizontal" android:id="@+id/carmode_map_poi_panel_right_phone_layout" android:background="@drawable/com_bg_item_selector" android:paddingLeft="16dp" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="18sp" android:textColor="@color/cl_text_a5_content" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/carmode_map_poi_panel_right_phone" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="60dp" android:maxWidth="200dp" android:text="@string/no_phone" android:singleLine="true"/>
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:layout_marginRight="16dp" android:src="@drawable/map_ic_poi_call" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                <View android:background="@color/cl_line_a1_item" android:layout_width="match_parent" android:layout_height="@dimen/common_item_line" android:layout_marginBottom="1dp"/>
            </RelativeLayout>
            <RelativeLayout android:orientation="horizontal" android:id="@+id/carmode_map_poi_panel_right_distance_layout" android:background="@drawable/com_bg_item_selector" android:paddingLeft="16dp" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="18sp" android:textColor="@color/cl_text_a5_content" android:gravity="center_vertical" android:id="@+id/carmode_map_poi_panel_right_distance" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="60dp" android:text="距离"/>
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:layout_marginRight="16dp" android:src="@drawable/map_ic_poi_navigate" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                <View android:background="@color/cl_line_a1_item" android:layout_width="match_parent" android:layout_height="@dimen/common_item_line" android:layout_marginBottom="1dp"/>
            </RelativeLayout>
            <View android:background="@color/cl_line_a1_item" android:layout_width="match_parent" android:layout_height="@dimen/common_item_line" android:layout_marginLeft="16dp" android:layout_marginBottom="1dp"/>
        </LinearLayout>
        <RelativeLayout android:orientation="horizontal" android:id="@+id/carmode_map_poi_panel_right_updown_layout" android:paddingLeft="8dp" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <ImageView android:id="@+id/carmode_map_poi_panel_right_up" android:background="@drawable/com_bg_item_selector" android:focusable="true" android:visibility="invisible" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginBottom="5dp" android:src="@drawable/map_ic_poi_details_prev" android:scaleType="center" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"/>
            <ImageView android:id="@+id/carmode_map_poi_panel_right_down" android:background="@drawable/com_bg_item_selector" android:focusable="true" android:visibility="invisible" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginRight="8dp" android:layout_marginBottom="5dp" android:src="@drawable/map_ic_poi_details_next" android:scaleType="center" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
