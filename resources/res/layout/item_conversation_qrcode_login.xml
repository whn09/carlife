<?xml version="1.0" encoding="utf-8"?>
<com.baidu.che.codriver.widget.LoginView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:background="@drawable/card_default_bg" android:paddingRight="16dp" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="12dp">
        <TextView android:textSize="18sp" android:textColor="@color/white" android:id="@+id/login_text" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="18dp" android:text="请用手机扫描二维码登录" android:alpha="0.6"/>
        <RelativeLayout android:id="@+id/web_rl" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="24dp" android:layout_below="@+id/login_text">
            <com.baidu.che.codriver.widget.LoginWebview android:id="@+id/feedback_qrcode" android:background="#ffffff" android:scrollbars="none" android:clickable="false" android:layout_width="128dp" android:layout_height="128dp"/>
            <ImageView android:id="@+id/sapi_iv" android:visibility="gone" android:layout_width="33dp" android:layout_height="33dp" android:layout_marginLeft="48dp" android:src="@drawable/login_qrcode_scan_success" android:layout_centerVertical="true"/>
            <RelativeLayout android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_toRightOf="@+id/feedback_qrcode">
                <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/login_help_text" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="1. 打开百度系手机应用，扫描二维码" android:alpha="0.6"/>
                <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/login_help_text2" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="13dp" android:text="2. 登录百度账号，即可在车机登录" android:layout_below="@+id/login_help_text" android:alpha="0.6"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="24dp" android:layout_below="@+id/web_rl"/>
    </RelativeLayout>
</com.baidu.che.codriver.widget.LoginView>
