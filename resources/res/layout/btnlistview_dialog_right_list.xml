<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/common_dialog_right_list" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@drawable/com_shape_dialog_bg" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true">
        <LinearLayout android:orientation="vertical" android:id="@+id/btnlistview_left" android:visibility="gone" android:layout_width="72dp" android:layout_height="match_parent">
            <ImageButton android:id="@+id/btnlistview_btn_prev" android:background="@drawable/com_bg_item_selector" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginTop="72dp" android:src="@drawable/com_ic_prev" android:scaleType="center"/>
            <FrameLayout android:layout_gravity="center_horizontal" android:id="@+id/btnlistview_scroller" android:background="@color/transparent" android:layout_width="2dp" android:layout_height="192dp">
                <FrameLayout android:id="@+id/btnlistview_scroll_bar" android:background="#33ffffff" android:layout_width="match_parent" android:layout_height="12dp"/>
            </FrameLayout>
            <ImageButton android:id="@+id/btnlistview_btn_next" android:background="@drawable/com_bg_item_selector" android:layout_width="match_parent" android:layout_height="48dp" android:src="@drawable/com_ic_next" android:scaleType="center"/>
        </LinearLayout>
        <TextView android:textSize="18sp" android:textColor="@color/cl_text_a5_title" android:gravity="center" android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="64dp" android:singleLine="true" android:layout_toRightOf="@+id/btnlistview_left"/>
        <ListView android:id="@+id/lv_menu" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@drawable/com_bg_item_selector" android:cacheColorHint="@android:color/transparent" android:divider="@null" android:layout_toRightOf="@+id/btnlistview_left" android:layout_below="@+id/tv_title"/>
    </RelativeLayout>
</RelativeLayout>
