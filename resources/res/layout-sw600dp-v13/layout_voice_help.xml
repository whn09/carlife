<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/color_main_bg" android:paddingTop="@dimen/system_topbar_height" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:id="@+id/title_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp">
        <ImageView android:id="@+id/btn_back" android:background="@drawable/common_btn_bg_focus" android:focusable="true" android:layout_width="@dimen/voice_other_icon" android:layout_height="@dimen/voice_other_icon" android:layout_marginLeft="50dp" android:src="@drawable/ic_back" android:scaleType="centerInside"/>
        <TextView android:textSize="37sp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="50dp" android:layout_marginRight="72dp" android:text="@string/you_can_say"/>
    </LinearLayout>
    <ScrollView android:paddingBottom="32dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/left_bar_width" android:layout_marginTop="32dp" android:layout_marginRight="72dp" android:layout_below="@+id/title_layout">
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="26sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="26dp" android:text="@string/help_navi_title"/>
                <TextView android:textSize="26sp" android:textColor="@color/fifty_percent_white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/help_navi_content" android:lineSpacingExtra="8sp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="17dp">
                <TextView android:textSize="26sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="26dp" android:text="@string/help_music_title"/>
                <TextView android:textSize="26sp" android:textColor="@color/fifty_percent_white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/help_music_content" android:lineSpacingExtra="8sp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="17dp">
                <TextView android:textSize="26sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="26dp" android:text="@string/help_call_title"/>
                <TextView android:textSize="26sp" android:textColor="@color/fifty_percent_white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/help_call_content" android:lineSpacingExtra="8sp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="17dp">
                <TextView android:textSize="26sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="26dp" android:text="@string/help_app_title"/>
                <TextView android:textSize="26sp" android:textColor="@color/fifty_percent_white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/help_app_content" android:lineSpacingExtra="8sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
